{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@mz3/framework": ["packages/framework/src/index.ts"],
      "@mz3/framework-http": ["packages/framework-http/src/index.ts"],
      "@mz3/myasdf": ["packages/myasdf/src/index.ts"],
      "@mz3/util": ["packages/util/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
